QUE) WAP TO PERFORM DELETION IN ARRAY?

#include <stdio.h>

int main() {
    int a[10];
	int n,i,pos;
	printf("enter the size of array");
	scanf("%d",&n);
	printf("\nenter elements");
	for(i=0;i<n;i++)
	{
	    scanf("%d",&a[i]);
	}
	printf("\noriginal_array\n");
	for(i=0;i<n;i++)
	{
	    printf("%d\n",a[i]);
	}
	printf("enter the pos where you want to delete element");
	scanf("%d",&pos);
	for(i=pos-1;i<n-1;i++)
	{
	     a[i] = a[i+1];
	}
	
	printf("\nResultant array is:\n");
	for(i=0;i<n-1;i++)
	{
	    printf("%d\n",a[i]);
	}
}


// 	Delete At Index ANd Delete At Value

// URL:	https://ide.geeksforgeeks.org/o463vQNFX8

// CODE:
#include <iostream>
using namespace std;

int DeleteAtIndex(int arr[], int n, int index) {
    // shift the elements.
    for(int i=index; i<n; i++) {
        arr[i] = arr[i+1]; 
    }
    // update the size
    n--;
    
    // print the new array 
    cout<<"\nthe updated array is: "<<endl;
    for(int i=0; i<n; i++) {
        cout<<arr[i]<<" ";
    }
}

int DeleteWithValue(int arr[], int n, int value) {
    int count = 0;
    for(int i=0; i<n; i++) {
        if(arr[i] == value) {
            for(int j=i; j<(n-1); i++) {
                arr[j] = arr[j+1];
            }
            count++;
            break;
        }
    }
    
    if(count == 0) {
        cout<<"\nelement not found which you want to delete"<<endl;
    }
    else {
        cout<<"element deleted successfully"<<endl;
        cout<<"updated array is: "<<endl;
        for(int i=0; i<n-1; i++) {
            cout<<arr[i]<<" ";
        }
    }
}

int main() {
	int arr[] = {1,2,3,4,5};
	int n = sizeof(arr) / sizeof(arr[0]);
	int index = 2;
	DeleteAtIndex(arr, n, index);
	cout<<"\nNow delete element with value: "<<endl;
	int val = 4;
	DeleteWithValue(arr,n,val);
	return 0;
}

