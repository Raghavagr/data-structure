Find duplicates in O(n) time and O(1) extra space 

// URL: https://ide.geeksforgeeks.org/xXCQCXVa97

#include <iostream>
#include<algorithm>
using namespace std;

int findDup(int arr[], int n) {
    cout<<"Repeating elements are: "<<endl;
    for(int i=0; i<n; i++) {
        if(arr[abs(arr[i])] >= 0) {
            arr[abs(arr[i])] = -arr[abs(arr[i])];
        }
        else {
            cout<<arr[i]<<" ";
        }
    }
}

int main() {
	int arr[] = {1,2,3,1,3,6,6};
	int n = sizeof(arr)/sizeof(arr[0]);
	findDup(arr, n);
	return 0;
}
