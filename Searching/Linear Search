//code
#include <stdio.h>

int linearSearch(int arr[], int n, int element) {
    for(int i=0;i<n;i++) {
        if(element == arr[i]) {
            return i;    // OR i+1
        }
    }
    return -1;
}

int main() {
	int arr[100] = {2,4,16,9,12,7,3,23,18,27,57,41,74};
	int size = sizeof(arr)/sizeof(int);
	int element = 7;
	printf("\nsize of arr:%d",size);
	int searchIndex = linearSearch(arr,size,element);
	printf("\nthe element %d found at position %d",element,searchIndex);
	return 0;
}
